<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field="i18n" type="org.jbpm.form.builder.ng.client.i18n.Constants"/>
    <ui:with field='resources' type='org.jbpm.form.builder.ng.client.resources.ShowcaseResources'/>
    
  <gwt:HTMLPanel height="100%" width="100%" stylePrimaryName="backgroundWrapper">
    <table cellpadding="0" cellspacing="0" border="0" class="mainWrapper">
      <tr height="25">
        <td colspan="2"><gwt:SimplePanel styleName="optionsViewWrapper" height="25px" width="100%" ui:field="optionsView"/></td>
      </tr>
      <tr id="mainRowWrapper">
        <td width="230px" class="toolViewWrapper" valign="top" height="430px">
            <!-- We are setting 43dragdrop-dropTarget gwt-TabLayoutPanelContent0px for safari/chrome, toolView is causing problems -->
            <gwt:TabLayoutPanel width="230px" height="100%"   barHeight="25" barUnit="PX" stylePrimaryName="toolView">
                <gwt:tab selected="true">
                <gwt:header>Menu</gwt:header>
                <gwt:ScrollPanel width="220px" ui:field="menuView"/>
                </gwt:tab>
            </gwt:TabLayoutPanel>
          
        </td>
        <td width="760">
          <table cellpadding="0" cellspacing="0">
            <tr>
              <td height="25" width="760" class="toolBarViewWrapper">
                <gwt:Panel height="25px" width="760px" ui:field="toolBarView"/>
              </td>
            </tr>
            <tr>
              <td height="100%" width="760" class="layoutViewWrapper">
                <gwt:ScrollPanel height="100%" width="760px" ui:field="layoutView"/>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      
    </table>
   
  </gwt:HTMLPanel>
</ui:UiBinder>